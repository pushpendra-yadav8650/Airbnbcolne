<% layout("/layouts/boilerplate")%>
<body>
    <style>
      #filters{
        display: flex;
        flex-wrap: wrap;
        align-items: center;
      }
      .filter{
        text-align: center;
        margin-right:1.8rem ;
        margin-top: 1rem;
        opacity: 0.7;
      }
      .filter:hover{
        opacity: 1;
        cursor: pointer;
      }
      .filter p {
        font-size: 0.8rem;
      }
      .text-gst{
        display: none;
      }
      .tax-toggle{
        margin:1rem;
        padding:10px ;
        border-radius: 5px;
        box-shadow: .1px .1px 1px 1px #888888;
        
      }
    </style>
    <!-- <h2>all listings</h2> -->
    <!-- <form method="GET" action="/listings/new">
        <button> Create New Listing</button>
    </form> -->
    <div id="filters">
        <div class="filter">
           <div> <i class="fa-solid fa-fire"></i></div>
           <p>Trending</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-bed"></i></div>
            <p>Rooms</p>
         </div>
         <div class="filter">
            <div> <i class="fa-solid fa-mountain-sun"></i></div>
            <p>Iconic cities</p>
         </div>
         <div class="filter">
             <div><i class="fa-solid fa-mountain"></i></div>
             <p>Mountaine</p>
          </div>
          <div class="filter">
            <div><i class="fa-brands fa-fort-awesome"></i></div>
            <p>castels</p>
         </div>
         <div class="filter">
             <div><i class="fa-solid fa-person-swimming"></i></div>
             <p>Amazing pool</p>
          </div>
          <div class="filter">
            <div><i class="fa-solid fa-campground"></i></div>
            <p>Camping</p>
         </div>
         <div class="filter">
           <div><i class="fa-solid fa-tractor"></i></div>
           <p>Farms</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-snowflake"></i></div>
            <p>Artic</p>
         </div>
         <div class="filter">
            <div><i class="fa-solid fa-street-view"></i></div>
            <p>Amzing views</p>
         </div>
         <div class="filter">
            <div><i class="fa-solid fa-face-smile"></i></div>
            <p>OMG</p>
         </div>
         
         <!--<div class="filter">
            <div><i class="fa-solid fa-disease"></i></div>
            <p>Island</p>
         </div>
         <div class="filter">
            <div><i class="fa-solid fa-mug-hot"></i></div>
            <p>Bed & Breakfast</p>
         </div>
         <div class="filter">
            <div><i class="fa-solid fa-key"></i></div>
            <p>New</p>
         </div> -->
         <div class="tax-toggle">
            <div class="form-check-reverse form-switch">
                <input class="form-check-input"
                 type="checkbox" 
                 role="switch"
                id="flexSwitchCheckDefault">
                <label class="form-check-label" for="flexSwitchCheckDefault">
                    Display total after taxs</label>
              </div>
         </div>
         
    </div>
    <div class="container-fluid">
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
    <%  for(let listing of allListings){ %>
<a href="/listings/<%= listing._id %> " class="listing-link">
    <div class="card listing-card" >
        <div class="card-body">
        <img src="<%= listing.image.url %> " class="card-img-top" alt="listing_image" style="height:15rem"/>
        <div class="card-img-overlay"> </div>
          <p class="card-text">
            <b><%=listing.title %></b><br>
            <%=listing.price %>
            <%= listing.location %>
     &#8377;<%= listing.price %>/night 
     <i class="text-gst"><b> &nbsp;&nbsp;+18% GST </b></i>
        </p>
        </div>
    </div>
    </a>
     <% } %>
    </div>
    </div>
</body>
<script>
    let textSwitch = document.getElementById("flexSwitchCheckDefault");
    textSwitch.addEventListener("click",()=>{
        let textInfo = document.getElementsByClassName("text-gst");
       for(info of textInfo){
        if(info.style.display != "inline"){
            info.style.display="inline";
        }else{
            info.style.display="none";
        }
       
       }
    })
</script>