<% layout("/layouts/boilerplate")%>

<div class="row mt-3">
        <h1 class="col-6 offset-3">Singup on WanderList</h1>
    <div class="col-8 offset-2">
        <form action="/singup" method="post"  class="needs-validaition">
            <div class="mb-3">
                <label for="username" class="form-label"> username</label>
                <input type="text" name="username"
                    id="username"
                    class="form-control"
                    required>
                <div class="valid-feedback">title looks good</div>
            </div>
            <div class="mb-3">
                <label for="email" class="form-label"> username Email</label>
                <input type="email" name="email"
                    id="email"
                    class="form-control"
                    required>
               
            </div>
            <div class="mb-3">
                <label for="password" class="form-label"> username Password</label>
                <input type="password" name="password"
                    id="password"
                    class="form-control"
                    required>
                <div class="valid-feedback">title looks good</div>
            </div>
            <button class= "btn btn-success">Singup</button>
        </form>
    </div>
</div>